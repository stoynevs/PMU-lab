<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.DogGame"
        tools:targetApi="31">
        <activity
            android:name=".GameOverActivity"
            android:exported="false"
            android:label="@string/title_activity_game_over"
            android:theme="@style/Theme.DogGame" />
        <activity
            android:name=".ChangePasswordActivity"
            android:exported="false"
            android:label="@string/title_activity_change_password"
            android:theme="@style/Theme.DogGame" />
        <activity
            android:name=".ChangeUsernameActivity"
            android:exported="false"
            android:label="@string/title_activity_change_username"
            android:theme="@style/Theme.DogGame" />
        <activity
            android:name=".SetAvatarActivity"
            android:exported="false"
            android:label="@string/title_activity_set_avatar"
            android:theme="@style/Theme.DogGame" />
        <activity
            android:name=".DeleteProfileActivity"
            android:exported="false"
            android:label="@string/title_activity_delete_profile"
            android:theme="@style/Theme.DogGame" />
        <activity
            android:name=".DashboardActivity"
            android:exported="false"
            android:label="@string/title_activity_dashboard"
            android:theme="@style/Theme.DogGame" />
        <activity
            android:name=".ProfileActivity"
            android:exported="false"
            android:label="@string/title_activity_profile"
            android:theme="@style/Theme.DogGame" />
        <activity
            android:name=".StartGameActivity"
            android:exported="false"
            android:label="@string/title_activity_start_game"
            android:theme="@style/Theme.DogGame" />
        <activity
            android:name=".MenuActivity"
            android:exported="false"
            android:label="@string/title_activity_menu"
            android:theme="@style/Theme.DogGame" />
        <activity
            android:name=".LogInActivity"
            android:exported="false"
            android:label="@string/title_activity_log_in"
            android:theme="@style/Theme.DogGame" />
        <activity
            android:name=".RegisterActivity"
            android:exported="false"
            android:label="@string/title_activity_register"
            android:theme="@style/Theme.DogGame" />
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/Theme.DogGame">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>